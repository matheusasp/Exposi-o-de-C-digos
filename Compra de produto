<script>
      function Short(cor){
        this.preco;
        this.cor = cor;
        if (cor == 'blue'){
          this.preco = 30;
        }
        if (cor == 'black'){
          this.preco = 55;
        }
        if (cor == 'green'){
          this.preco = 12;
        }
        this.mudaCor = function (cor){
            this.cor = cor;
        }
}
var  listaDeShort = [];
(function comprarShort(){
      var n =  parseInt(prompt("Quantos shorts deseja comprar?"));
      for(i=0; i<n; i++){
        var short1 = prompt("Digite a cor do short que deseja: ")
        listaDeShort.push(new Short(short1));
        }
})()
function totalShort(){
var total = 0;
for( var i=0; i<listaDeShort.length ; i++){
  total +=listaDeShort[i].preco;
}
console.log("Lista de shorts: ");
for (var i=0; i<listaDeShort.length ; i++){
      console.log(listaDeShort[i].preco);
}
console.log("Soma total de preÃ§o: " , total);
}
totalShort();
    </script>
    
